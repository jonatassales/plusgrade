{
  "name": "plusgrade",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "web": "turbo run start --filter=web",
    "web:dev": "turbo run dev --filter=web",
    "clean": "turbo run clean && rm -rf node_modules",
    "lint": "biome check .",
    "format": "biome format --write .",
    "docker:down": "bash bin/docker/docker-down.sh",
    "docker:up": "bash bin/docker/docker-up.sh",
    "docker:ps": "bash bin/docker/docker-ps.sh",
    "validation:api:tax:rules": "bash bin/validation/validate-tax-calculation-rule.sh",
    "validation:api:tax:negative": "bash bin/validation/validate-tax-negative-rule.sh",
    "validation:api:auth:flow": "bash bin/validation/validate-auth-flow.sh",
    "validation:api:smoke": "bash bin/validation/validate-api-rules.sh",
    "prepare": "husky",
    "postinstall": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs,json,jsonc,css}": [
      "biome lint --write --files-ignore-unknown=true",
      "biome format --write --files-ignore-unknown=true"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.6.3"
  },
  "packageManager": "pnpm@8.15.6"
}
